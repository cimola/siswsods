<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN" 
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="it.toscana.regione.rubrica.domain">  
      	
	<class name="User" table="users">
		<id name="username" column="username" length="50" type="string">
			<generator class="assigned" />
		</id>	
		<property name="password" not-null="true" column="password" type="string" length="500" />
		<property name="enabled" not-null="true" column="enabled" type="boolean" />		  
	</class>
	
	<class name="Authority" table="authorities">	
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="authority" not-null="true" column="authority" type="string" length="50" />		
		<many-to-one name="user" column="username" not-null="true"/>		
	</class>
	
	<class name="Contact" table="contacts">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="nome" not-null="false" column="nome" type="string" />			
		<property name="cognome" not-null="true" column="cognome" type="string" />
		<property name="indirizzo" not-null="false" column="indirizzo" type="string" />
		<property name="cap" not-null="false" column="cap" type="string" />
		<property name="citta" not-null="false" column="citta" type="string" />
		<property name="provincia" not-null="false" column="provincia" type="string" />
		<property name="nazione" not-null="false" column="nazione" type="string" />		
		<property name="telCasa" not-null="false" column="tel_casa" type="string" />
		<property name="telUfficio" not-null="false" column="tel_ufficio" type="string" />
		<property name="cellulare" not-null="false" column="cellulare" type="string" />
		<property name="fax" not-null="false" column="fax" type="string" />
		<property name="email" not-null="false" column="email" type="string" />
		<property name="note" not-null="false" column="note" type="text" />
		<many-to-one name="utente" column="user_id" />
	</class>
	
</hibernate-mapping>